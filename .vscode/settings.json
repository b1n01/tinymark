{
	// Autoformat
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,

	// Use tab with size 4
	"editor.tabSize": 4,
	"editor.fontSize": 14,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,

	// Formatters
	"[javascript][json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.formatOnSave": false,
	},
}